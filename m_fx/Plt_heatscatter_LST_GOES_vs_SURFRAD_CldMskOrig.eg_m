StName,'_',St,'_',time_step,'_2004_2009_',dynt,'Std',num2str(nStd)]
if strcmpi(IntDpd,'yes')
FigName =  [FigName,'_IntDpdY']
else
FigName =  [FigName,'_IntDpdN']
end 
tistrs  = {'Observed LST (K)','Estimated LST (K)',''} 
 
heatscatters(xx,yy,'100',tistrs,statistics)
 

line(xlim,ylim,'LineStyle','--','color', 'k','linewidth',2.5)

set(gca,'xlim',xlim,'xtick',xlim(1):nxbin:xlim(2),'ylim',ylim,'ytick',ylim(1):nybin:ylim(2),...
'linewidth',2.125,'FontSize', 15,'fontweight','bold');
  
figid = annotation('textbox', [0.45 0.16 0.1 0.1],...
 'String', strjust({[dynt_str,'                '],[Sat,'.vs.','BSRN/',St]},'right'),...
